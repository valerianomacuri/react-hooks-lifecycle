{
  "compilerOptions": {
    /* Projects */

    /* Language and Environment */
    "target": "es2016",

    /* Modules */
    "module": "commonjs",

    /* JavaScript Support */
    "declaration": true,

    /* Emit */

    /* Interop Constraints */
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    /* Type Checking */
    "strict": true,

    /* Completeness */
    "skipLibCheck": true,
    "outDir": "dist"
  },
  "include": ["src"]
}
